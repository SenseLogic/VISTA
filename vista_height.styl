MakeFractionalHeight( column_count, breakpoint_size_map, breakpoint_precision )

    for column_index in 1 .. column_count
    {
        .height-{column_index}_{column_count}
        {
            height: 100% * ( column_index / column_count );
        }

        for breakpoint_name, breakpoint_size in breakpoint_size_map
        {
            @media ( min-width: breakpoint_size )
            {
                .height-{column_index}_{column_count}-above-{breakpoint_name}
                {
                    height: 100% * ( column_index / column_count );
                }
            }

            @media ( max-width: breakpoint_size - breakpoint_precision )
            {
                .height-{column_index}_{column_count}-below-{breakpoint_name}
                {
                    height: 100% * ( column_index / column_count );
                }
            }
        }
    }

// ~~

MakeFractionalHeightRange( first_column_count, last_column_count, breakpoint_size_map, breakpoint_precision )

    for column_count in first_column_count .. last_column_count
    {
        MakeFractionalHeight( column_count, breakpoint_size_map, breakpoint_precision );
