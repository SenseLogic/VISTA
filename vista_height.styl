.height-auto
{
    height: auto;
}

// ~~

MakeHeightAuto( breakpoint_size_map, breakpoint_precision )

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .height-auto-above-{breakpoint_name}
            {
                height: auto;
            }
        }

        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .height-auto-below-{breakpoint_name}
            {
                height: auto;
            }
        }
    }

// ~~

MakeHeight( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    .height-{size}{unit_name}
    {
        height: size * unit_value;
    }

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .height-{size}{unit_name}-above-{breakpoint_name}
            {
                height: size * unit_value;
            }
        }

        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .height-{size}{unit_name}-below-{breakpoint_name}
            {
                height: size * unit_value;
            }
        }
    }

// ~~

MakeHeightRange( start, step, count, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    for index in 0 .. count
    {
        size = start + index * step;

        MakeHeight( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision );
    }

