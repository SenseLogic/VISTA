.carousel
{
    overflow: hidden;
}

// ~~

MakeCarousel( slide_count, slide_duration = 5s, motion_duration = 1s )

    .carousel-strip-{slide_count}
    {
        display: flex;
        position: relative;
        left: 0;
        margin: 0;
        width: ( slide_count + 1 ) * 100%;
    }

    .carousel-strip-animation-{slide_count}
    {
        animation: slide_count * slide_duration carousel-animation- + slide_count infinite;
        animation-timing-function: ease;
    }

    .carousel-slide-{slide_count}
    {
        width: ( 100% / ( slide_count + 1 ) );
    }

    vendors = official

    @keyframes carousel-animation-{slide_count}

        for slide_index in 0 .. slide_count - 1

            show_time = slide_index / slide_count
            move_time = ( slide_index + ( 1.0 - motion_duration / slide_duration ) ) / slide_count

            {100% * show_time}

                left: -100% * slide_index;

            {100% * move_time}

                left: -100% * slide_index;

        100%
        {
            left: -100% * slide_count;
        }
