@require "../CODE/STYLUS/vista_reset.styl"
@require "../CODE/STYLUS/vista.styl"

// -- CONSTANTS

BlackColor = #000000;
DarkestGrayColor = #202020;
DarkerGrayColor = #404040;
DarkGrayColor = #808080;
GrayColor = #A0A0A0;
LightGrayColor = #C0C0C0;
LighterGrayColor = #F0F0F0;
LightestGrayColor = #F8F8F8;
WhiteColor = #FFFFFF;
RedColor = #FF0000;
GreenColor = #00FF00;
BlueColor = #0000FF;

MediaQueryNameList = min-width-20em, min-width-30em, min-width-40em, min-width-60em, min-width-80em;

// -- ELEMENTS

html
{
    background-color: #000000;

    +Media( min-width-20em )
    {
        background-color: #FFFFFF;
    }

    +Media( max-width-20em, min-width-40em )
    {
        background-color: #FF0000;
    }

    +Media( "max-width-20em || min-width-40em" )
    {
        background-color: #FF0000;
    }

    +Media( "max-height-40em && max-width-20em", "min-height-20em && min-width-40em" )
    {
        background-color: #00FF00;
    }

    +Media( "max-height-40em && max-width-20em || min-height-20em && min-width-40em" )
    {
        background-color: #0000FF;
    }
}

