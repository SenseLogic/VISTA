MakeFontSize( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    .font-size-{size}{unit_name}
    {
        font-size: size * unit_value;
    }

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .font-size-{size}{unit_name}-above-{breakpoint_name}
            {
                font-size: size * unit_value;
            }
        }
        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .font-size-{size}{unit_name}-below-{breakpoint_name}
            {
                font-size: size * unit_value;
            }
        }
    }

MakeFontSizeRange( start, step, count, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    for index in 0 .. count
    {
        size = start + index * step;

        MakeFontSize( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision );
    }
