// -- IMPORTS

@require "../../CODE/STYLUS/vista_reset.styl"
@require "../../CODE/STYLUS/vista.styl"

// -- ELEMENTS

html
{
    background: #FFFFFF;
}

// -- CLASSES

MakeOpacityAnimation( 10, 0 10, 1 0, 1, 1, linear, 1, both, "block-" );
MakeXTranslationAnimation( 10, 0 10, 0 5vw, 2, 1, linear, 1, both, "block-" );
MakeYTranslationAnimation( 10, 0 10, 0 5vw, 3, 1, linear, 1, both, "block-" );
MakeXScalingAnimation( 10, 0 10, 0.5 1, 4, 1, linear, 1, both, "block-" );
MakeYScalingAnimation( 10, 0 10, 0.5 1, 5, 1, linear, 1, both, "block-" );
MakeRotationAnimation( 10, 0 10, 30deg 0, 6, 1, linear, 1, both, "block-" );

// ~~

.block
{
    position: relative;
    width: 5vw;
    height: 5vw;
}
