.test-carousel
{
    width: 100%;
}

.test-carousel-slide
{
    height: 100dvh;

    display: flex;
    justify-content: center;
    align-items: center;

    background-position: center center;
    background-size: cover;

    color: white;
}

.test-carousel-slide-background-1
{
    background-image: url( "../MEDIA/slide_1.jpg" );
}

.test-carousel-slide-background-2
{
    background-image: url( "../MEDIA/slide_2.jpg" );
}

.test-carousel-slide-background-3
{
    background-image: url( "../MEDIA/slide_3.jpg" );
}

.test-carousel-slide-background-4
{
    background-image: url( "../MEDIA/slide_4.jpg" );
}

.test-carousel-slide-background-5
{
    background-image: url( "../MEDIA/slide_5.jpg" );
}

.test-carousel-slide-background-6
{
    background-image: url( "../MEDIA/slide_6.jpg" );
}

.test-carousel-slide-menu
{
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX( -50% );

    margin-left: auto;
    margin-right: auto;

    display: flex;
}

.test-carousel-slide-button
{
    height: 0.5rem;
    width: 0.5rem;
    border: 2px solid white;
    border-radius: 50%;
}

.test-carousel-slide-button:hover,
.test-carousel-slide-button.is-selected
{
    background: white;
}

.test-carousel-slide-button + .test-carousel-slide-button
{
    margin-left: 2rem;
}

.test-carousel-arrow-button
{
    font-size: 4rem;
    color: white;

    cursor: pointer;
}

.test-carousel-left-arrow-button
{
    position: absolute;
    top: 50%;
    left: 4rem;
    transform: translateY( -50% );
}

.test-carousel-right-arrow-button
{
    position: absolute;
    top: 50%;
    right: 4rem;
    transform: translateY( -50% );
}

.test-carousel-reset-button
{
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX( -50% ) translateY( -50% );

    font-size: 4rem;
    color: white;

    cursor: pointer;
}
