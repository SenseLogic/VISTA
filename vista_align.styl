MakeAlign( media_query_name_list = {} )

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .align-top-{media_query_name}
            {
                align-items: flex-start;
            }

            .align-middle-{media_query_name}
            {
                align-items: center;
            }

            .align-bottom-{media_query_name}
            {
                align-items: flex-end;
            }

            .align-stretch-{media_query_name}
            {
                align-items: stretch;
            }

            .align-baseline-{media_query_name}
            {
                align-items: baseline;
            }
        }
    }

