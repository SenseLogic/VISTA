.align-top
{
    align-items: flex-start;
}

.align-middle
{
    align-items: center;
}

.align-bottom
{
    align-items: flex-end;
}

.align-stretch
{
    align-items: stretch;
}

.align-baseline
{
    align-items: baseline;
}

