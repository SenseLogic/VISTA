.width-auto
{
    width: auto;
}

// ~~

MakeWidthAuto( breakpoint_size_map, breakpoint_precision )

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .width-auto-above-{breakpoint_name}
            {
                width: auto;
            }
        }

        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .width-auto-below-{breakpoint_name}
            {
                width: auto;
            }
        }
    }

// ~~

MakeWidth( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    .width-{size}{unit_name}
    {
        width: size * unit_value;
    }

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .width-{size}{unit_name}-above-{breakpoint_name}
            {
                width: size * unit_value;
            }
        }

        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .width-{size}{unit_name}-below-{breakpoint_name}
            {
                width: size * unit_value;
            }
        }
    }

// ~~

MakeWidthRange( start, step, count, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    for index in 0 .. count
    {
        size = start + index * step;

        MakeWidth( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision );
    }

