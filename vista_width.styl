MakeFractionalWidth( column_count, breakpoint_size_map, breakpoint_precision )

    for column_index in 1 .. column_count
    {
        .width-{column_index}_{column_count}
        {
            width: 100% * column_index / column_count;
        }

        for breakpoint_name, breakpoint_size in breakpoint_size_map
        {
            @media ( min-width: breakpoint_size )
            {
                .width-{column_index}_{column_count}-above-{breakpoint_name}
                {
                    width: 100% * column_index / column_count;
                }
            }

            @media ( max-width: breakpoint_size - breakpoint_precision )
            {
                .width-{column_index}_{column_count}-below-{breakpoint_name}
                {
                    width: 100% * column_index / column_count;
                }
            }
        }
    }

