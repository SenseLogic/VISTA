MakeJustify( media_query_name_list, media_query_map )

    for media_query_name in media_query_name_list
    {
        @media media_query_map[ media_query_name ]
        {
            .justify-left-{media_query_name}
            {
                justify-content: flex-start;
            }

            .justify-center-{media_query_name}
            {
                justify-content: center;
            }

            .justify-right-{media_query_name}
            {
                justify-content: flex-end;
            }

            .justify-between-{media_query_name}
            {
                justify-content: space-between;
            }

            .justify-around-{media_query_name}
            {
                justify-content: space-around;
            }
        }
    }

