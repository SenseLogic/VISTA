MakeBorderColor( name, value, breakpoint_size_map, breakpoint_precision )

    .border-color-{name}
    {
        border-color: value;
    }

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .border-color-{name}-above-{breakpoint_name}
            {
                border-color: value;
            }
        }

        @media ( max-width: breakpoint_size - breakpoint_precision )
        {
            .border-color-{name}-below-{breakpoint_name}
            {
                border-color: value;
            }
        }
    }
