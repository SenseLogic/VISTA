MakeBorderRadiusRange( start, step, count, unit_value, unit_name, breakpoint_size_map, breakpoint_precision )

    for index in 0 .. count
    {
        size = start + index * step;

        MakeBorderRadius( size, unit_value, unit_name, breakpoint_size_map, breakpoint_precision );
    }

