// -- MIXINS

SetRootFontSize( font_size, media_query_font_size_map )

    html
    {
        font-size: font_size;
    }

    for media_query_font_size, media_query_name in media_query_font_size_map
    {
        @media MediaQueryMap[ media_query_name ]
        {
            html
            {
                font-size: media_query_font_size;
            }
        }
    }

// ~~

MakeFontFamilyValue( name, family, media_query_name_list = {}, prefix =, suffix = )

    .{prefix}font-family-{name}{suffix}
    {
        font-family: convert( family );
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}font-family-{name}-{media_query_name}{suffix}
            {
                font-family: convert( family );
            }
        }
    }

// ~~

MakeFontSizeValue( size, unit_value, unit_name, media_query_name_list = {}, prefix =, suffix = )

    .{prefix}font-size-{size}{unit_name}{suffix}
    {
        font-size: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}font-size-{size}{unit_name}-{media_query_name}{suffix}
            {
                font-size: size * unit_value;
            }
        }
    }

// ~~

MakeFontSizeValueRange( start, step, count, unit_value, unit_name, media_query_name_list = {}, prefix =, suffix = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeFontSizeValue( size, unit_value, unit_name, media_query_name_list, prefix, suffix );
    }

