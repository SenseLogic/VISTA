MakeBackgroundOriginBorderBox( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}background-origin-border-box{suffix}
    {
        background-origin: border-box important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}background-origin-border-box-{media_query_name}{suffix}
            {
                background-origin: border-box important;
            }
        }
    }

