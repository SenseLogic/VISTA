MakeGridHeightValueRange( row_count, total_size, gutter_size, unit_name, media_query_name_list = {} )

    row_size = ( total_size - ( row_count - 1 ) * gutter_size ) / row_count;

    for row_index in 1 .. row_count
    {
        .grid-height-{row_index}{unit_name}
        {
            height: row_size * row_index + gutter_size * ( row_index - 1 );
        }

        for media_query_name in media_query_name_list
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .grid-height-{row_index}{unit_name}-{media_query_name}
                {
                    height: row_size * row_index + gutter_size * ( row_index - 1 );
                }
            }
        }
    }
