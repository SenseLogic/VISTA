// -- MIXINS

MakeHeightAuto( media_query_name_list = {}, prefix =, suffix = )

    .{prefix}height-auto{suffix}{suffix}
    {
        height: auto;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}height-auto-{media_query_name}{suffix}
            {
                height: auto;
            }
        }
    }

