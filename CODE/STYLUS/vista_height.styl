MakeHeightValue( size, unit_value, unit_name, media_query_name_list = {}, prefix =, suffix = )

    .{prefix}height-{size}{unit_name}{suffix}
    {
        height: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}height-{size}{unit_name}-{media_query_name}{suffix}
            {
                height: size * unit_value;
            }
        }
    }

// ~~

MakeHeightValueRange( start, step, count, unit_value, unit_name, media_query_name_list = {}, prefix =, suffix = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeHeightValue( size, unit_value, unit_name, media_query_name_list, prefix, suffix );
    }

