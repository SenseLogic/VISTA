MakePositionLeftValue( offset, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}position-left-{offset}{unit_name}{suffix}
    {
        left: offset * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}position-left-{offset}{unit_name}-{media_query_name}{suffix}
            {
                left: offset * unit_value important;
            }
        }
    }

// ~~

MakePositionLeftValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    for index in 0 .. count - 1
    {
        offset = start + index * step;

        MakePositionLeftValue( offset, unit_value, unit_name, media_query_name_array, prefix, suffix, important );
    }

