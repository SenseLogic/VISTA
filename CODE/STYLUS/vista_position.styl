MakePositionLeftRange( start, step, count, unit_value, unit_name, media_query_name_list = {} )

    for index in 0 .. count - 1
    {
        offset = start + index * step;

        MakePositionLeft( offset, unit_value, unit_name, media_query_name_list );
    }

