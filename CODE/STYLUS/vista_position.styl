MakePositionLeftValue( offset, unit_value, unit_name, media_query_name_list = {}, suffix = )

    .position-left-{offset}{unit_name}{suffix}
    {
        left: offset * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .position-left-{offset}{unit_name}-{media_query_name}{suffix}
            {
                left: offset * unit_value;
            }
        }
    }

