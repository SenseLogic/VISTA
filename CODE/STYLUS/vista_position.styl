// -- MIXINS

MakePositionStatic( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}position-static{suffix}
    {
        position: static important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}position-static-{media_query_name}{suffix}
            {
                position: static important;
            }
        }
    }

