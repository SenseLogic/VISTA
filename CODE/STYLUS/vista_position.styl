    .position-static{suffix}
    {
        position: static;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .position-static-{media_query_name}{suffix}
            {
                position: static;
            }
        }
    }

