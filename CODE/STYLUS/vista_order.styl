// -- MIXINS

MakeOrderFirst( media_query_name_list = {}, prefix =, suffix = )

    .{prefix}order-first{suffix}
    {
        order: -1;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}order-last-{media_query_name}{suffix}
            {
                order: 1;
            }
        }
    }

