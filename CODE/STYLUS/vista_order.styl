// -- MIXINS

MakeOrderFirst( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}order-first{suffix}
    {
        order: -1 important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}order-last-{media_query_name}{suffix}
            {
                order: 1 important;
            }
        }
    }

