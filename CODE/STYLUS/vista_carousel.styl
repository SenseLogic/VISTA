MakeCarousel()

    .carousel
    {
        overflow-x: hidden;
    }

// ~~

MakeCarouselStripValue( slide_count, visible_slide_count = 1 )

    .carousel-strip-{slide_count}-{visible_slide_count}
    {
        display: flex;
        position: relative;
        left: 0;
        margin: 0;
        width: ( slide_count / visible_slide_count ) * 100%;
    }

// ~~

MakeCarouselStripPerpetualAnimationValue( slide_count, visible_slide_count = 1, pause_duration = 3000, translation_duration = 500 )

    slide_duration = pause_duration + translation_duration

    vendors = official

    @keyframes carousel-strip-perpetual-animation-{slide_count}-{visible_slide_count}-{pause_duration}-{translation_duration}

        for slide_index in 0 .. slide_count - 1 - visible_slide_count

            show_time = slide_index / ( slide_count - visible_slide_count )
            move_time = ( slide_index + ( 1.0 - translation_duration / slide_duration ) ) / ( slide_count - visible_slide_count )

            {100% * show_time}

                left: -100% * slide_index * ( 1.0 / visible_slide_count );

            {100% * move_time}

                left: -100% * slide_index * ( 1.0 / visible_slide_count );

        100%
        {
            left: -100% * ( slide_count - visible_slide_count ) * ( 1.0 / visible_slide_count );
        }

    .carousel-strip-perpetual-animation-{slide_count}-{visible_slide_count}-{pause_duration}-{translation_duration}
    {
        animation: ( slide_count - visible_slide_count ) * slide_duration * 0.001s carousel-strip-perpetual-animation- + slide_count + "-" + visible_slide_count + "-" + pause_duration + "-" + translation_duration infinite;
        animation-timing-function: ease;
    }

