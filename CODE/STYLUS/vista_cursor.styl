MakeCursorDefault( media_query_name_list = {} )

    .cursor-default
    {
        cursor: default;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .cursor-default-{media_query_name}
            {
                cursor: default;
            }
        }
    }

