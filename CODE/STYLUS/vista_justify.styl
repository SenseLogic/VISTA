.justify-content-start
{
    justify-content: flex-start;
}

.justify-content-center
{
    justify-content: center;
}

.justify-content-end
{
    justify-content: flex-end;
}

.justify-content-between
{
    justify-content: space-between;
}

.justify-content-around
{
    justify-content: space-around;
}

// ~~

MakeJustify( media_query_name_list = {} )

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .justify-content-start-{media_query_name}
            {
                justify-content: flex-start;
            }

            .justify-content-center-{media_query_name}
            {
                justify-content: center;
            }

            .justify-content-end-{media_query_name}
            {
                justify-content: flex-end;
            }

            .justify-content-between-{media_query_name}
            {
                justify-content: space-between;
            }

            .justify-content-around-{media_query_name}
            {
                justify-content: space-around;
            }
        }
    }

