// -- MIXINS

MakeWidthAuto( media_query_name_array = {}, prefix =, suffix = )

    .{prefix}width-auto{suffix}
    {
        width: auto;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}width-auto-{media_query_name}{suffix}
            {
                width: auto;
            }
        }
    }

