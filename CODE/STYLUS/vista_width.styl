MakeFractionalWidthValueRange( column_count, media_query_name_array = {}, prefix =, suffix = )

    for column_index in 1 .. column_count
    {
        .{prefix}width-{column_index}\\/{column_count}{suffix}
        {
            width: 100% * ( column_index / column_count );
        }

        for media_query_name in media_query_name_array
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .{prefix}width-{column_index}\\/{column_count}-{media_query_name}{suffix}
                {
                    width: 100% * ( column_index / column_count );
                }
            }
        }
    }

