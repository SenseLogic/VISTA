MakeGridWidthValueRange( column_count, total_size, gutter_size, unit_name, media_query_name_array = {}, prefix =, suffix = )

    column_size = ( total_size - ( column_count - 1 ) * gutter_size ) / column_count;

    for column_index in 1 .. column_count
    {
        .{prefix}grid-width-{column_index}{unit_name}{suffix}
        {
            width: column_size * column_index + gutter_size * ( column_index - 1 );
        }

        for media_query_name in media_query_name_array
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .{prefix}grid-width-{column_index}{unit_name}-{media_query_name}{suffix}
                {
                    width: column_size * column_index + gutter_size * ( column_index - 1 );
                }
            }
        }
    }
