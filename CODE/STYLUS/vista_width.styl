MakePartialWidth( column_count, total_size, offset_size, unit_name, media_query_name_list = {} )

    for column_index in 1 .. column_count
    {
        .width-{column_index}{unit_name}
        {
            width: total_size * ( column_index / column_count ) + offset_size;
        }

        for media_query_name in media_query_name_list
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .width-{column_index}{unit_name}-{media_query_name}
                {
                    width: total_size * ( column_index / column_count ) + offset_size;
                }
            }
        }
    }

