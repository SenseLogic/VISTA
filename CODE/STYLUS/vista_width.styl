MakeWidthAuto( media_query_name_list = {} )

    .width-auto
    {
        width: auto;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .width-auto-{media_query_name}
            {
                width: auto;
            }
        }
    }

