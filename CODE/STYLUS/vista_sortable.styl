// -- MIXINS

MakeSortableGridColumn( prefix =, suffix =, important = )

    .{prefix}sortable-grid-column{suffix}
    {
        user-select: none important;
        cursor: pointer important;
    }

    .{prefix}sortable-grid-column{suffix}.order-is-ascending:after
    {
        position: absolute important;

        content: "\00a0\25B2" important;
    }

    .{prefix}sortable-grid-column{suffix}.order-is-descending:after
    {
        position: absolute important;

        content: "\00a0\25BC" important;
    }

