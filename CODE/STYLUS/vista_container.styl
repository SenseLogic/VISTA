// -- MIXINS

MakeExtendedContainer( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}extended-container{suffix}
    {
        margin-left: auto important;
        margin-right: auto important;
        width: 100% important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}extended-container-{media_query_name}{suffix}
            {
                margin-left: auto important;
                margin-right: auto important;
                width: 100% important;
            }
        }
    }

