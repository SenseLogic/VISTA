MakeContainerExtended( media_query_name_list = {} )

    .container-extended
    {
        width: 100%;
        margin-right: auto;
        margin-left: auto;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .container-extended-{media_query_name}
            {
                width: 100%;
                margin-right: auto;
                margin-left: auto;
            }
        }
    }


