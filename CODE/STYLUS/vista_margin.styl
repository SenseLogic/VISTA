MakeMarginAuto( media_query_name_list = {} )

    .margin-auto
    {
        margin: auto;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .margin-auto-{media_query_name}
            {
                margin: auto;
            }
        }
    }

