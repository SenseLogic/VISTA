MakeMarginValue( size, unit_value, unit_name, media_query_name_list = {} )

    .margin-{size}{unit_name}
    {
        margin: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .margin-{size}{unit_name}-{media_query_name}
            {
                margin: size * unit_value;
            }
        }
    }

