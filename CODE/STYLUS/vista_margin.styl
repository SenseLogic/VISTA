// -- MIXINS

MakeMarginAuto( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}margin-auto{suffix}
    {
        margin: auto important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}margin-auto-{media_query_name}{suffix}
            {
                margin: auto important;
            }
        }
    }

// ~~

MakeMarginValue( size, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}margin-{size}{unit_name}{suffix}
    {
        margin: size * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}margin-{size}{unit_name}-{media_query_name}{suffix}
            {
                margin: size * unit_value important;
            }
        }
    }

// ~~

MakeMarginValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeMarginValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix, important );
    }

