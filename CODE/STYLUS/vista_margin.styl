MakeFractionalMarginLeftValue( column_count, media_query_name_array = {}, prefix =, suffix =, important = )

    for column_index in 1 .. column_count

        .{prefix}margin-left-{column_index}\\/{column_count}{suffix}
        {
            margin-left: 100% * ( column_index / column_count ) important;
        }

        for media_query_name in media_query_name_array
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .{prefix}margin-left-{column_index}\\/{column_count}-{media_query_name}{suffix}
                {
                    margin-left: 100% * ( column_index / column_count ) important;
                }
            }
        }

// ~~

MakeFractionalMarginLeftValueRange( first_column_count, last_column_count, media_query_name_array = {}, prefix =, suffix =, important = )

    for column_count in first_column_count .. last_column_count
    {
        MakeFractionalMarginLeftValue( column_count, media_query_name_array, prefix, suffix, important );
    }

