MakeFractionalMarginLeftValue( column_count, media_query_name_list = {} )

    for column_index in 1 .. column_count

        .margin-left-{column_index}_{column_count}
        {
            margin-left: 100% * ( column_index / column_count );
        }

        for media_query_name in media_query_name_list
        {
            @media MediaQueryMap[ media_query_name ]
            {
                .margin-left-{column_index}_{column_count}-{media_query_name}
                {
                    margin-left: 100% * ( column_index / column_count );
                }
            }
        }

