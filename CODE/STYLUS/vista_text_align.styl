// -- MIXINS

MakeTextAlignLeft( media_query_name_list = {}, prefix =, suffix = )

    .{prefix}text-align-left{suffix}
    {
        text-align: left;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}text-align-left-{media_query_name}{suffix}
            {
                text-align: left;
            }
        }
    }

