MakeVisibilityHidden( media_query_name_list = {}, suffix = )

    .visibility-hidden{suffix}
    {
        visibility: hidden;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .visibility-hidden-{media_query_name}{suffix}
            {
                visibility: hidden;
            }
        }
    }

