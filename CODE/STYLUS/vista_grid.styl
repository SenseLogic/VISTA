.grid-flow-row
{
    grid-auto-flow: row;
}

.grid-flow-column
{
    grid-auto-flow: column;
}

// ~~

MakeGridFlow( media_query_name_list = {} )

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .grid-flow-row-{media_query_name}
            {
                grid-auto-flow: row;
            }

            .grid-flow-column-{media_query_name}
            {
                grid-auto-flow: column;
            }

        }
    }

