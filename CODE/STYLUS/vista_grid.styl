.grid-heights-auto
{
    grid-auto-rows: auto;
}

.grid-heights-min
{
    grid-auto-rows: min-content;
}

.grid-heights-max
{
    grid-auto-rows: max-content;
}

// ~~

MakeGridHeights( size, unit_value, unit_name, media_query_name_list = {} )

    .grid-auto-rows-{size}{unit_name}
    {
        grid-auto-rows: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .grid-auto-rows-{size}{unit_name}-{media_query_name}
            {
                grid-auto-rows: size * unit_value;
            }
        }
    }

// ~~

MakeGridHeightsRange( start, step, count, unit_value, unit_name, media_query_name_list = {} )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeGridHeights( size, unit_value, unit_name, media_query_name_list );
    }

