MakePaddingValueRange( start, step, count, unit_value, unit_name, media_query_name_list = {} )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakePaddingValue( size, unit_value, unit_name, media_query_name_list );
    }

