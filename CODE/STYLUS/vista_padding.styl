// -- MIXINS

MakePaddingValue( size, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix = )

    .{prefix}padding-{size}{unit_name}{suffix}
    {
        padding: size * unit_value;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}padding-{size}{unit_name}-{media_query_name}{suffix}
            {
                padding: size * unit_value;
            }
        }
    }

// ~~

MakePaddingValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakePaddingValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix );
    }

