MakePaddingValue( size, unit_value, unit_name, media_query_name_list = {} )

    .padding-{size}{unit_name}
    {
        padding: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .padding-{size}{unit_name}-{media_query_name}
            {
                padding: size * unit_value;
            }
        }
    }

