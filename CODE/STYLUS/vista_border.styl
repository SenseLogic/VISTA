MakeBorderColorValue( name, value, media_query_name_list = {}, prefix =, suffix = )

    .{prefix}border-color-{name}{suffix}
    {
        border-color: value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}border-color-{name}-{media_query_name}{suffix}
            {
                border-color: value;
            }
        }
    }
