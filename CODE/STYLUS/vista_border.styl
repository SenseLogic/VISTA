// -- MIXINS

MakeBorderRadiusValue( size, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}border-radius-{size}{unit_name}{suffix}
    {
        border-radius: size * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}border-radius-{size}{unit_name}-{media_query_name}{suffix}
            {
                border-radius: size * unit_value important;
            }
        }
    }

// ~~

MakeBorderRadiusValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix =, important = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeBorderRadiusValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix, important );
    }

// ~~

MakeBorderColorValue( name, value, media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}border-color-{name}{suffix}
    {
        border-color: value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}border-color-{name}-{media_query_name}{suffix}
            {
                border-color: value important;
            }
        }
    }
