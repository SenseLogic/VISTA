MakeBorderRadius( size, unit_value, unit_name, media_query_name_list = {} )

    .border-radius-{size}{unit_name}
    {
        border-radius: size * unit_value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .border-radius-{size}{unit_name}-{media_query_name}
            {
                border-radius: size * unit_value;
            }
        }
    }

