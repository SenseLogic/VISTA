MakeBorderColor( name, value, media_query_name_list = {} )

    .border-color-{name}
    {
        border-color: value;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .border-color-{name}-{media_query_name}
            {
                border-color: value;
            }
        }
    }
