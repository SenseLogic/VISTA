// -- MIXINS

MakeFlexDirectionRow( media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}flex-direction-row{suffix}
    {
        flex-direction: row important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}flex-direction-row-{media_query_name}{suffix}
            {
                flex-direction: row important;
            }
        }
    }

