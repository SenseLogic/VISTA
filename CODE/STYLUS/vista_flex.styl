MakeFlexShrinkValue( size, unit_value = 1, unit_name = "", media_query_name_array = {}, prefix =, suffix =, important = )

    .{prefix}flex-shrink-{size}{unit_name}{suffix}
    {
        flex-shrink: size * unit_value important;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}flex-shrink-{size}{unit_name}-{media_query_name}{suffix}
            {
                flex-shrink: size * unit_value important;
            }
        }
    }

// ~~

MakeFlexShrinkValueRange( start, step, count, unit_value = 1, unit_name = "", media_query_name_array = {}, prefix =, suffix =, important = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeFlexShrinkValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix, important );
    }

