MakeFlexDirectionRow( media_query_name_list = {} )

    .flex-direction-row
    {
        flex-direction: row;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .flex-direction-row-{media_query_name}
            {
                flex-direction: row;
            }
        }
    }

