// -- MIXINS

MakeGutterValue( size, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix = )

    .{prefix}gutter-{size}{unit_name}{suffix}
    {
        margin-top: -( size * unit_value );
        margin-left: -( size * unit_value );
    }

    .{prefix}gutter-{size}{unit_name}{suffix} > *
    {
        padding-top: size * unit_value;
        padding-left: size * unit_value;
    }

    for media_query_name in media_query_name_array
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}gutter-{size}{unit_name}-{media_query_name}{suffix}
            {
                margin-top: -( size * unit_value );
                margin-left: -( size * unit_value );
            }

            .{prefix}gutter-{size}{unit_name}-{media_query_name}{suffix} > *
            {
                padding-top: size * unit_value;
                padding-left: size * unit_value;
            }
        }
    }

// ~~

MakeGutterValueRange( start, step, count, unit_value, unit_name, media_query_name_array = {}, prefix =, suffix = )

    for index in 0 .. count - 1
    {
        size = start + index * step;

        MakeGutterValue( size, unit_value, unit_name, media_query_name_array, prefix, suffix );
    }
