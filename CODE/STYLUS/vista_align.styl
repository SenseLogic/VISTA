// -- MIXINS

MakeAlignItemsStart( media_query_name_list = {}, prefix =, suffix = )

    .{prefix}align-items-start{suffix}
    {
        align-items: flex-start;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .{prefix}align-items-start-{media_query_name}{suffix}
            {
                align-items: flex-start;
            }
        }
    }

