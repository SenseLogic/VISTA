MakeDisplay( media_query_name_list = {} )

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .display-none-{media_query_name}
            {
                display: none;
            }

            .display-block-{media_query_name}
            {
                display: block;
            }

            .display-contents-{media_query_name}
            {
                display: contents;
            }

            .display-table-{media_query_name}
            {
                display: table;
            }

            .display-table-cell-{media_query_name}
            {
                display: table-cell;
            }

            .display-flex-{media_query_name}
            {
                display: flex;
            }

            .display-grid-{media_query_name}
            {
                display: grid;
            }

            .display-inline-{media_query_name}
            {
                display: inline;
            }

            .display-inline-block-{media_query_name}
            {
                display: inline-block;
            }

            .display-inline-table-{media_query_name}
            {
                display: inline-table;
            }

            .display-inline-flex-{media_query_name}
            {
                display: inline-flex;
            }

            .display-inline-grid-{media_query_name}
            {
                display: inline-grid;
            }
        }
    }
