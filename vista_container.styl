MakeContainerCentered( max_width, max_width_map, media_query_name_list )

    .container-centered
    {
        max-width: max_width;
        margin-left: auto;
        margin-right: auto;
    }

    for media_query_name in media_query_name_list
    {
        @media MediaQueryMap[ media_query_name ]
        {
            .container-centered
            {
                max-width: max_width_map[ breakpoint_name ];
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
