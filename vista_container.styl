MakeContainerCentered( max_width, max_width_map, breakpoint_size_map, breakpoint_precision )

    .container-centered
    {
        max-width: max_width;
        margin-left: auto;
        margin-right: auto;
    }

    for breakpoint_name, breakpoint_size in breakpoint_size_map
    {
        @media ( min-width: breakpoint_size )
        {
            .container-centered
            {
                max-width: max_width_map[ breakpoint_name ];
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
