MakeTextColor( name, value, media_query_name_list, media_query_map )

    .text-color-{name}
    {
        color: value;
    }

    for media_query_name in media_query_name_list
    {
        @media media_query_map[ media_query_name ]
        {
            .text-color-{name}-{media_query_name}
            {
                color: value;
            }
        }
    }
